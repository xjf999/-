{"ast":null,"code":"import { useRoute } from 'vue-router';\nimport { useStore } from 'vuex';\nimport { computed, ref } from 'vue';\nexport default {\n  // eslint-disable-next-line vue/multi-word-component-names\n  name: 'Cart',\n  methods: {\n    path() {\n      return path;\n    }\n  },\n  setup() {\n    const store = useStore();\n    const route = useRoute();\n    const cartList = store.state.cartList;\n    const shopId = route.params.id;\n    const total = computed(() => {\n      const product = cartList[shopId];\n      let count = 0;\n      if (product) {\n        for (const i in product) {\n          const item = product[i];\n          count += item.count;\n        }\n      }\n      return count;\n    });\n    const price = computed(() => {\n      const product = cartList[shopId];\n      let count = 0;\n      if (product) {\n        for (const i in product) {\n          const item = product[i];\n          if (item.check) {\n            count += item.count * item.price;\n          }\n        }\n      }\n      return count.toFixed(2);\n    });\n    const allChecked = computed(() => {\n      const product = cartList[shopId];\n      let result = true;\n      if (product) {\n        for (const i in product) {\n          const item = product[i];\n          if (item.count > 0 && !item.check) {\n            result = false;\n          }\n        }\n      }\n      return result;\n    });\n    const productList = computed(() => {\n      const productList = cartList[shopId] || [];\n      return productList;\n    });\n    const addItemToCart = (shopId, productId, productInfo, num) => {\n      store.commit('addItemToCart', {\n        shopId,\n        productId,\n        productInfo,\n        num\n      });\n    };\n    const checkIcon = (shopId, productId) => {\n      store.commit('checkIcon', {\n        shopId,\n        productId\n      });\n    };\n    const cleanCart = shopId => {\n      store.commit('cleanCart', {\n        shopId\n      });\n      handleShowCart();\n    };\n    const cartChecked = shopId => {\n      store.commit('cartChecked', {\n        shopId\n      });\n    };\n    const showCart = ref(false);\n    const handleShowCart = () => {\n      const product = cartList[shopId];\n      if (product) {\n        showCart.value = !showCart.value;\n      }\n    };\n    return {\n      total,\n      price,\n      productList,\n      shopId,\n      addItemToCart,\n      checkIcon,\n      cleanCart,\n      allChecked,\n      cartChecked,\n      showCart,\n      handleShowCart\n    };\n  }\n};","map":{"version":3,"names":["useRoute","useStore","computed","ref","name","methods","path","setup","store","route","cartList","state","shopId","params","id","total","product","count","i","item","price","check","toFixed","allChecked","result","productList","addItemToCart","productId","productInfo","num","commit","checkIcon","cleanCart","handleShowCart","cartChecked","showCart","value"],"sources":["C:\\Users\\21112\\Desktop\\前端啊啊啊\\jingdon\\src\\views\\shop\\cart.vue"],"sourcesContent":["<template>\r\n  <div class=\"cart\">\r\n    <div class=\"product\" v-if=\"showCart && total > 0\">\r\n      <div class=\"product__header\">\r\n        <div class=\"product__header__all\" @click=\"() => cartChecked(shopId)\">\r\n          <span class=\"product__header__icon iconfont\"\r\n                v-html=\"allChecked ? `&#xe70f;`:`&#xe66c;`\"\r\n          >\r\n          </span>\r\n          全选\r\n        </div>\r\n        <div class=\"product__header__clear\"><span @click=\"() => cleanCart(shopId)\">清空购物车</span></div>\r\n      </div>\r\n      <template  v-for=\"item in productList\" :key=\"item._id\">\r\n        <div v-if=\"item.count > 0\" class=\"product__item\">\r\n          <div class=\"product__item__checked iconfont\"\r\n               v-html=\"item.check ? `&#xe70f;`:`&#xe66c;`\"\r\n               @click=\"() => checkIcon(shopId,item._id)\"\r\n          ></div>\r\n          <img :src='item.imgUrl'\r\n               class=\"product__item__img\"\r\n          />\r\n          <div class=\"product__item__detail\">\r\n            <h4 class=\"product__item_title\">{{ item.name }}</h4>\r\n            <div class=\"product__item__price\">\r\n              <span class=\"product__item__yen\">&yen;</span>{{ item.price }}\r\n              <span class=\"product__item__origin\">&yen;{{ item.oldPrice }}</span>\r\n            </div>\r\n          </div>\r\n          <div class=\"product__number\">\r\n            <span class=\"product__number__minus\" @click=\"addItemToCart(shopId,item._id,item,-1)\">-</span>\r\n            {{item.count || 0}}\r\n            <span class=\"product__number__plus\"\r\n                  @click= \"() => { addItemToCart(shopId,item._id,item,1) }\"\r\n            >+</span>\r\n          </div>\r\n        </div>\r\n      </template>\r\n    </div>\r\n    <div class=\"check\">\r\n        <div class=\"check__icon\" @click=\"handleShowCart\">\r\n            <img src=\"http://www.dell-lee.com/imgs/vue3/basket.png\"\r\n              class=\"check__icon__img\"\r\n            />\r\n            <div class=\"check__icon__tag\">{{total}}</div>\r\n        </div>\r\n        <div class=\"check__info\">\r\n            总计：<span class=\"check__info__price\">&yen;{{price}}</span>\r\n        </div>\r\n      <router-link :to='{path:`/order/${shopId}`'>\r\n        <div class=\"check__btn\">去结算</div>\r\n      </router-link>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { useRoute } from 'vue-router'\r\nimport { useStore } from 'vuex'\r\nimport { computed, ref } from 'vue'\r\n\r\nexport default {\r\n  // eslint-disable-next-line vue/multi-word-component-names\r\n  name: 'Cart',\r\n  methods: {\r\n    path () {\r\n      return path\r\n    }\r\n  },\r\n  setup () {\r\n    const store = useStore()\r\n    const route = useRoute()\r\n    const cartList = store.state.cartList\r\n    const shopId = route.params.id\r\n    const total = computed(() => {\r\n      const product = cartList[shopId]\r\n      let count = 0\r\n      if (product) {\r\n        for (const i in product) {\r\n          const item = product[i]\r\n          count += item.count\r\n        }\r\n      }\r\n      return count\r\n    })\r\n    const price = computed(() => {\r\n      const product = cartList[shopId]\r\n      let count = 0\r\n      if (product) {\r\n        for (const i in product) {\r\n          const item = product[i]\r\n          if (item.check) {\r\n            count += (item.count * item.price)\r\n          }\r\n        }\r\n      }\r\n      return count.toFixed(2)\r\n    })\r\n    const allChecked = computed(() => {\r\n      const product = cartList[shopId]\r\n      let result = true\r\n      if (product) {\r\n        for (const i in product) {\r\n          const item = product[i]\r\n          if (item.count > 0 && !item.check) {\r\n            result = false\r\n          }\r\n        }\r\n      }\r\n      return result\r\n    })\r\n    const productList = computed(() => {\r\n      const productList = cartList[shopId] || []\r\n      return productList\r\n    })\r\n    const addItemToCart = (shopId, productId, productInfo, num) => {\r\n      store.commit('addItemToCart', { shopId, productId, productInfo, num })\r\n    }\r\n    const checkIcon = (shopId, productId) => {\r\n      store.commit('checkIcon', { shopId, productId })\r\n    }\r\n    const cleanCart = (shopId) => {\r\n      store.commit('cleanCart', { shopId })\r\n      handleShowCart()\r\n    }\r\n    const cartChecked = (shopId) => {\r\n      store.commit('cartChecked', { shopId })\r\n    }\r\n    const showCart = ref(false)\r\n    const handleShowCart = () => {\r\n      const product = cartList[shopId]\r\n      if (product) {\r\n        showCart.value = !showCart.value\r\n      }\r\n    }\r\n    return { total, price, productList, shopId, addItemToCart, checkIcon, cleanCart, allChecked, cartChecked, showCart, handleShowCart }\r\n  }\r\n}\r\n</script>\r\n\r\n<style lang=\"scss\" scoped>\r\n.cart {\r\n    position: absolute;\r\n   